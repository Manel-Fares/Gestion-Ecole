{% extends 'base.html.twig' %}

{% block body %}
    <h1>Resultat</h1>

    <table>
        <tbody>
            <tr>
                <th>Etudiant</th>
                <td>{{ resultat.etudiant }}</td>
            </tr>
            <tr>
                <th>Dateresultat</th>
                <td>{% if resultat.dateresultat %}{{ resultat.dateresultat|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Resultat</th>
                <td>{{ resultat.resultat }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('resultat_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('resultat_edit', { 'etudiant': resultat.etudiant }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
