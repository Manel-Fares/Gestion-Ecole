{% extends 'base.html.twig' %}

{% block body %}
    <h1>Note</h1>

    <table>
        <tbody>
            <tr>
                <th>Etudiant</th>
                <td>{{ note.etudiant }}</td>
            </tr>
            <tr>
                <th>Matiere</th>
                <td>{{ note.matiere }}</td>
            </tr>
            <tr>
                <th>Enseignant</th>
                <td>{{ note.enseignant }}</td>
            </tr>
            <tr>
                <th>Datenote</th>
                <td>{% if note.datenote %}{{ note.datenote|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Notecc</th>
                <td>{{ note.notecc }}</td>
            </tr>
            <tr>
                <th>Noteds</th>
                <td>{{ note.noteds }}</td>
            </tr>
            <tr>
                <th>Noteexam</th>
                <td>{{ note.noteexam }}</td>
            </tr>
            <tr>
                <th>Moyenne</th>
                <td>{{ note.moyenne }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('note_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('note_edit', { 'etudiant': note.etudiant }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
